// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Flat {
  name            String @id
  assignmentOrder String @db.VarChar(2048)
  rotationSign    String @db.VarChar(15)
  apiKey          String @db.VarChar(36)
}

model User {
  id       BigInt @id
  username String @db.VarChar(50)
  apiKey   String @db.VarChar(36)
  flatName String
}
