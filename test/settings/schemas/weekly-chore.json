{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/definitions/WeeklyChore",
  "type": "object",
  "definitions": {
    "WeeklyChore": {
      "type": "object",
      "properties": {
        "week_id": {
          "$ref": "week-id.json#/definitions/WeekID"
        },
        "chores": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "week_id": {
                "$ref": "week-id.json#/definitions/WeekID"
              },
              "type": {
                "type": "string"
              },
              "assigned": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "done": {
                "type": "boolean"
              }
            },
            "required": [
              "week_id",
              "type",
              "assigned",
              "done"
            ]
          }
        },
        "rotation": {
          "type": "integer"
        }
      },
      "required": [
        "week_id",
        "chores",
        "rotation"
      ]
    }
  }
}
